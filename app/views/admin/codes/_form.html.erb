<%= form_for @code, :url => (@code.persisted? ? admin_code_path(@code) : admin_codes_path) do |f| %>
  <%= render 'admin/shared/error_messages', :object => f.object -%>
  <table>
    <tr>
      <td><%= f.label :number, 'Numer:' %></td>
    </tr>
      <td><%= f.text_field :number %></td>
    </tr>
    <tr>
      <td><%= f.label :text, 'Opis:', :class=>"codes-form-content" %></td>
    </tr>
      <td><%= f.text_area :text %></td>
    </tr>
    <tr>
      <td>
        <%= f.submit "Zapisz", :class => "left" %>
        <%= button_to "Cofnij", admin_codes_path, :class => "left" %>
      </td>
    </tr>
  </table>
<% end %>
