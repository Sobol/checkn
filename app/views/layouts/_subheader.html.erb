<div id="subheader">
  <% if params[:controller] == "static_pages" %>
    <% if params[:action] == "company" || params[:action] == "contact" || params[:action] == "news" %>
      <%= image_tag "layouts/company_main_line.png", alt: 'company line', id: 'main-line' -%>
      <%= image_tag "layouts/dot.png", alt: 'dot', id: 'dot' -%>
      <div class="submenu-buttons">
        <p id="kontakt-button" class="<%= params[:action] == 'contact' ? 'active':''%>" img-data="contact">
          <%= link_to "", contact_static_pages_path, :class=>"left"  %>
        </p>
        <p id="aktualnosci-button" img-data="news">
          <%= link_to "", news_index_path, :class=>"middle"  %>
        </p>
      </div>
    <% elsif params[:action] == "devices" || params[:action] == "localization" || params[:action] == "cooperation" %>
      <%= image_tag "layouts/devices_main_line.png", alt: 'devices line', id: 'main-line' -%>
      <%= image_tag "layouts/dot.png", alt: 'dot', id: 'dot' -%>
      <div class="submenu-buttons">
        <p id="lokalizacje-button" class="<%= params[:action] == 'localization' ? 'active':''%>", img-data="localization" >
          <%= link_to "", localization_static_pages_path, :class=>"left"%>
        </p>
        <p id="wspolpraca-button" class="<%= params[:action] == 'cooperation' ? 'active':''%>", img-data="cooperation" >
          <%= link_to "", cooperation_static_pages_path, :class=>"middle"  %>
        </p>
      </div>
    <% elsif params[:action] == "partners" || params[:action] == "technodiag" || params[:action] == "imedia" %>
<!--
      <%= image_tag "layouts/partners_main_line.png", alt: 'partners line', id: 'main-line' -%>
      <%= image_tag "layouts/dot.png", alt: 'dot', id: 'dot' -%>
      <div class="submenu-buttons">
        <p id="technodiag-button" class="<%= params[:action] == 'technodiag' ? 'active':''%>", img-data="partners" >
          <%= link_to "", technodiag_static_pages_path, :class=>"left"  %>
        </p>
        <p id="imedia-button" class="<%= params[:action] == 'imedia' ? 'active':''%>", img-data="partners">
          <%= link_to "", imedia_static_pages_path, :class=>"middle"  %>
        </p>
      </div>
-->
    <% elsif params[:action] == "help" || params[:action] == "codes" || params[:action] == "connectors" || params[:action] == "cars" %>
      <%= image_tag "layouts/help_main_line.png", alt: 'help line', id: 'main-line' -%>
      <%= image_tag "layouts/dot.png", alt: 'dot', id: 'dot-help' -%>
      <div class="submenu-buttons">
        <p id="kody-button" class="<%= params[:action] == 'codes' ? 'active':''%>", img-data="codes">
          <%= link_to "", codes_static_pages_path, :class=>"left" %>
        </p>
        <p id="zlacza-button" class="<%= params[:action] == 'connectors' ? 'active':''%>", img-data="connectors">
          <%= link_to "", connectors_static_pages_path, :class=>"middle" %>
        </p>
        <p id="samochody-button" class="<%= params[:action] == 'cars' ? 'active':''%>", img-data="cars">
          <%= link_to "", cars_static_pages_path, :class=>"right" %>
        </p>
      </div>
    <% end %>
  <% elsif params[:controller] == "news" %>
    <%= image_tag "layouts/company_main_line.png", alt: 'company line', id: 'main-line' -%>
    <%= image_tag "layouts/dot.png", alt: 'dot', id: 'dot' -%>
    <div class="submenu-buttons">
      <p id="kontakt-button" img-data="contact">
        <%= link_to "", contact_static_pages_path, :class=>"left"  %>
      </p>
      <p id="aktualnosci-button" class="active" img-data="news">
        <%= link_to "", news_static_pages_path, :class=>"middle"  %>
      </p>
    </div>
  <% end %>
    <div id="submenu-lines">
    <% if params[:action] == "contact" || params[:action] == "localization" || params[:action] == "technodiag" || params[:action] == "codes" %>
      <%= image_tag "layouts/submenu_line_left.png", alt: 'left line', id: 'left-line', class: "active-line" -%>
      <%= image_tag "layouts/submenu_line_middle.png", alt: 'middle line', id: 'middle-line' -%>
      <%= image_tag "layouts/submenu_line_right.png", alt: 'right line', id: 'right-line' -%>
    <% elsif params[:controller] == "news" || params[:action] == "cooperation" || params[:action] == "imedia" || params[:action] == "connectors" %>
      <%= image_tag "layouts/submenu_line_left.png", alt: 'left line', id: 'left-line' -%>
      <%= image_tag "layouts/submenu_line_middle.png", alt: 'middle line', id: 'middle-line', class: "active-line"  -%>
      <%= image_tag "layouts/submenu_line_right.png", alt: 'right line', id: 'right-line' -%>
    <% elsif params[:action] == "cars" %>
      <%= image_tag "layouts/submenu_line_left.png", alt: 'left line', id: 'left-line' -%>
      <%= image_tag "layouts/submenu_line_middle.png", alt: 'middle line', id: 'middle-line' -%>
      <%= image_tag "layouts/submenu_line_right.png", alt: 'right line', id: 'right-line', class: "active-line" -%>
    <% else %>
      <%= image_tag "layouts/submenu_line_left.png", alt: 'left line', id: 'left-line' -%>
      <%= image_tag "layouts/submenu_line_middle.png", alt: 'middle line', id: 'middle-line' -%>
      <%= image_tag "layouts/submenu_line_right.png", alt: 'right line', id: 'right-line' -%>

    <% end %>
    </div>
</div>
