<div id="images">
  <%= image_tag "layouts/circle.png", alt: 'Circle', id: 'circle' -%>
  <%= image_tag "layouts/main_circle_content.png", alt: 'Circle content', id: 'circle-content' -%>

  <% if params[:controller] == "static_pages" %>
    <% unless params[:action] == "company" || params[:action] == "devices" || params[:action] == "partners" || params[:action] == "help" %>
      <%= image_tag "layouts/dot.png", alt: 'dot', id: 'sub-dot' -%>
    <% end %>

    <% if params[:action] == "company" %>
      <%= image_tag "circle-images/firma.png", alt: 'firma', class: 'main-image' -%>
    <% elsif params[:action] == "contact" %>
      <%= image_tag "circle-images/kontakt.png", alt: 'kontakt', class: 'main-image' -%>
    <% elsif params[:action] == "news" %>
      <%= image_tag "circle-images/aktualnosci.png", alt: 'aktualnosci', class: 'main-image' -%>
    <% elsif params[:action] == "devices" %>
      <%= image_tag "circle-images/urzadzenia.png", alt: 'urzadzenia', class: 'main-image' -%>
    <% elsif params[:action] == "localization" %>
      <%= image_tag "circle-images/lokalizacje.png", alt: 'lokalizacje', class: 'main-image' -%>
    <% elsif params[:action] == "cooperation" %>
      <%= image_tag "circle-images/wspolpraca.png", alt: 'wspolpraca', class: 'main-image' -%>
    <% elsif params[:action] == "partners" || params[:action] == "technodiag" || params[:action] == "imedia" %>
      <%= image_tag "circle-images/partnerzy.png", alt: 'partnerzy', class: 'main-image' -%>
    <% elsif params[:action] == "help" %>
      <%= image_tag "circle-images/pomoc.png", alt: 'pomoc', class: 'main-image' -%>
    <% elsif params[:action] == "codes" %>
      <%= image_tag "circle-images/kody.png", alt: 'kody', class: 'main-image' -%>
    <% elsif params[:action] == "connectors" %>
      <%= image_tag "circle-images/zlacza.png", alt: 'zlacza', class: 'main-image' -%>
    <% elsif params[:action] == "cars" %>
      <%= image_tag "circle-images/samochody.png", alt: 'samochody', class: 'main-image' -%>
    <% end %>
  <% end %>
</div>
